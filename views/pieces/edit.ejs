<%- include("../partials/header") %>

<div class="ui grid">
	<form id="textForm" class="ui form" action="/pieces/<%= piece["_id"] %>?_method=PUT" method="POST">
		<h1 class="ui center aligned header">Edit "<%= piece["title"] %>"</h1>
		<div class="field">
			<label for="title">Title</label>
			<input id="title" type="text" value="<%= piece["title"] %>" name="piece[title]" required>
		</div>
		<div class="field">
			<label for="body">Body</label>
			<textarea id="body" name="piece[body]" required><%= piece["body"] %></textarea>
		</div>
		<div class="field">
			<label for="image">Image (optional)</label>
			<input type="text" value="<%= piece["image"] %>" name="piece[image]" id="image">
		</div>
		<div class="field">
			<p><strong>Type</strong></p>
			<span class="typeOption">
				<input type="radio" value="story" name="piece[type]" id="story">
				<label for="story"><strong>Story</strong></label>
			</span>
			<span class="typeOption">
				<input type="radio" name="piece[type]" value="poem" id="poem">
				<label for="poem"><strong>Poem</strong></label>
			</span>
			<span class="typeOption">
				<input type="radio" name="piece[type]" value="article" id="article">
				<label for="article"><strong>Article</strong></label>
			</span>
			<span class="typeOption">
				<input type="radio" name="piece[type]" value="message" id="message">
				<label for="message"><strong>Message</strong></label>
			</span>
			<span class="typeOption">
				<input type="radio" name="piece[type]" value="dialogue" id="dialogue">
				<label for="dialogue"><strong>Dialogue</strong></label>
			</span>
			<span class="typeOption">
				<input type="radio" name="piece[type]" value="other" id="other">
				<label for="other"><strong>Other</strong></label>
			</span>
		</div>
		<div class="field">
			<label for="tags">Additional Tags</label>
			<input id="tags" type="text" value="<%= piece["tags"] %>" name="piece[tags]">
		</div>
		<button class="ui primary button">Submit</button>
	</form>
</div>

<%- include("../partials/footer") %>