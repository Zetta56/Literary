<%- include("./partials/header") %>

<div id="mainContainer" class="ui container">
	<form id="userForm" class="ui form" action="/register" method="POST">
		<h1 class="ui center aligned header">Register</h1>
		<div class="field">
			<label for="firstName">First Name</label>
			<input id="firstName" type="text" placeholder="First Name" name="firstName" required>
		</div>
		<div class="field">
			<label for="lastName">Last Name</label>
			<input id="lastName" type="text" placeholder="Last Name" name="lastName" required>
		</div>
		<div class="field">
			<label for="email">Email</label>
			<input id="image" type="text" placeholder="Email" name="email" required>
		</div>
		<div class="field">
			<label for="username">Username</label>
			<input id="username" type="text" placeholder="Username" name="username" required>
		</div>
		<div class="field">
			<label for="password">Password</label>
			<input id="password" type="password" placeholder="Password" name="password" required>
		</div>
		<button class="ui primary button">Submit</button>
	</form>
</div>

<%- include("./partials/footer") %>